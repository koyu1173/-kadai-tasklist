<h1>タスクリスト</h1>
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>ステータス</th>
        <th>タスク内容</th>  
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>
